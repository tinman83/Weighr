<Page
    x:Class="Weighr.Calibration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Weighr"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="10,0,0,0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Calibration Settings" FontSize="30" Grid.ColumnSpan="3" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Minimum Division" VerticalAlignment="Center"/>
        <ComboBox Width="250" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"  Name="MinimumDivisionComboBox" SelectionChanged="MinimumDivisionComboBox_SelectionChanged">
            <ComboBoxItem Content="1" IsSelected="True"/>
            <ComboBoxItem Content="2" />
            <ComboBoxItem Content="5" />
            <ComboBoxItem Content="10" />
            <ComboBoxItem Content="20" />
            <ComboBoxItem Content="50" />
        </ComboBox>

        <TextBlock Grid.Row="2" Text="Maximum Capacity" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Width="250" Margin="0,0,0,10" Name="tbxMaximumCapacity" HorizontalAlignment="Left"/>

        <Button Name="btnUpdateCalibrationSettings" Content="Update Settings" Grid.Row="3" Grid.Column="1"></Button>
        
        <TextBlock Name="tblCalibrationSteps" Grid.Row="4"  Text="Calibration Steps" FontSize="24" Grid.ColumnSpan="3" Margin="0,20,0,20"/>

       

        <TextBlock VerticalAlignment="Center" Grid.Row="6" Text="Step 1:"/>
        <Button Grid.Row="6" Grid.Column="2" Content="CALIBRATE ZERO" Name="btnSetMinimum" Margin="0,0,0,10" HorizontalAlignment="left" Click="btnSetMinimum_Click"></Button>
        <TextBox Grid.Row="6" Grid.Column="1" Width="250" Name="tbxSetMinimum" Margin="0,0,0,10" HorizontalAlignment="left" Grid.ColumnSpan="2"></TextBox>
<!--
        <TextBlock VerticalAlignment="Center" Grid.Row="7" Text="Step 2:"/>
        <Button Grid.Row="7" Grid.Column="1" Content="CALIBRATE ZERO" Name="btnCalibrateZero" Margin="0,0,0,10" HorizontalAlignment="left"></Button>
-->
        <TextBlock VerticalAlignment="Center" Grid.Row="7" Text="Step 2:"/>
        <Button Grid.Row="7" Grid.Column="2" Content="CALIBRATE SPAN" Name="btnSetMaximum" Margin="0,0,0,10" HorizontalAlignment="left" Click="btnSetMaximum_Click"></Button>
        <TextBox Grid.Row="7" Grid.Column="1" Width="250" Name="tbxSetMaximum" Margin="0,0,0,10" HorizontalAlignment="Left" Grid.ColumnSpan="2"></TextBox>
<!--
        <TextBlock VerticalAlignment="Center" Grid.Row="9" Text="Step 4:"/>
        <Button Grid.Row="9" Grid.Column="1" Content="CALIBRATE SPAN" Name="btnCalibrateSpan" Margin="0,0,0,10" HorizontalAlignment="left"></Button>
-->
    </Grid>
</Page>
